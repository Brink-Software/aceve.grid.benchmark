{
  "name": "grid-benchmark",
  "version": "1.0.0",
  "description": "Grid Benchmark - Vergelijk prestaties van verschillende grid componenten",
  "main": "dist/Ag-grid/src/ag-grid-app.js",
  "scripts": {
    "build": "tsc",
    "build:wasm": "cd Ag-grid && asc assembly/data-generator.ts --target release",
    "build:all": "npm run build:wasm && npm run build",
    "watch": "tsc --watch",
    "dev": "tsc --watch",
    "clean": "rm -rf dist Ag-grid/wasm",
    "serve": "npx serve -l 8000",
    "test": "cd playwright && npm run test:ag-grid",
    "test:ui": "cd playwright && npm run test:ag-grid:ui",
    "test:headed": "cd playwright && npm run test:ag-grid:headed"
  },
  "keywords": [
    "ag-grid",
    "typescript",
    "row-grouping",
    "crud",
    "large-dataset",
    "benchmark"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@playwright/test": "^1.40.0",
    "typescript": "^5.3.3",
    "assemblyscript": "^0.27.0"
  },
  "dependencies": {
    "ag-grid-community": "^31.0.0",
    "ag-grid-enterprise": "^34.3.1"
  }
}
